<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.daycaremanagement.HomeActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_assignment_white_24dp"
        android:id="@+id/informacoes"
        android:background="@android:color/holo_red_dark"
        android:padding="10dp"
        android:layout_alignTop="@+id/cadastro"
        android:layout_toRightOf="@+id/cadastro"
        android:layout_toEndOf="@+id/cadastro"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_local_dining_white_24dp"
        android:id="@+id/alimentacao"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_alignTop="@+id/carinho"
        android:layout_alignLeft="@+id/informacoes"
        android:layout_alignStart="@+id/informacoes" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_child_care_white_24dp"
        android:id="@+id/cadastro"
        android:background="@color/colorAccent"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:padding="10dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_query_builder_white_24dp"
        android:id="@+id/horario"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_alignTop="@+id/valorMensalidade"
        android:layout_alignLeft="@+id/carinho"
        android:layout_alignStart="@+id/carinho" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_attach_money_white_24dp"
        android:id="@+id/valorMensalidade"
        android:background="@android:color/holo_green_light"
        android:padding="10dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/alimentacao"
        android:layout_alignLeft="@+id/alimentacao"
        android:layout_alignStart="@+id/alimentacao" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_child_friendly_white_24dp"
        android:id="@+id/carinho"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/cadastro"
        android:layout_alignLeft="@+id/cadastro"
        android:layout_alignStart="@+id/cadastro" />
</RelativeLayout>
